@model EntityLayer.Concrete.Skill
@{
    ViewBag.Title = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditSkill</h2>
@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.SkillID)
        @Html.Label("Yetenek Adını Girin")
        @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SkillName)
        <br />
        @Html.Label("Yeteneğin Değeri '100 Üzerinden' Girin")
        @Html.TextBoxFor(x => x.SkillValue, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SkillValue)
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </div>
}
