@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h1>Yeni Kategori Eklme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryName)
    <br />
    @Html.Label("Açıklamayı yazınız")
    @Html.TextAreaFor(m => m.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryDescription)
    <br />
    <button class="btn btn-success" id="btn1">Kaydet</button>
    
</div>
}
<a href="/AdminCategory/Index/" class="navbar-btn">
     <p>
       Listeye Git
    </p>
</a>
<script>
    $('#btn1').click(function () {
        swal("Tebrikler!", "Başarılı bir şekilde eklendi!", "success");
    });
</script>

