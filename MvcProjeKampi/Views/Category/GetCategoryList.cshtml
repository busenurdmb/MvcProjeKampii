@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h3>Mvc Kamp Tablo Örneği</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Güncelle</th>

    </tr>
    
        @foreach (var x in Model)
        {
    <tr>
        <td>@x.CategoryID</td>
        <td>@x.CategoryName</td>
        <td>@x.CategoryDescription</td>
        <td>@x.CategoryStatus</td>
        <td><button class="btn btn-success"> günceller</button></td>
    </tr>
            }
        
    </table>
<a href="/Category/AddCategory " class="btn btn-info">Ekle</a>
<button class="btn btn-warning"> kategori listesi </button>
<button class="btn btn-danger"> kategori açıklaması </button>

